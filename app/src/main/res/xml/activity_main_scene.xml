<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Futuristic smooth transition -->
    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:duration="2000"
        app:motionInterpolator="easeInOutQuad">

        <OnClick
            app:targetId="@+id/textView"
            app:clickAction="transitionToEnd" />

        <!-- KeyFrames for smooth futuristic motion -->
        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@id/textView"
                app:framePosition="40"
                android:alpha="0.6"
                android:scaleX="1.1"
                android:scaleY="1.1" />

            <KeyAttribute
                app:motionTarget="@id/textView"
                app:framePosition="70"
                android:alpha="1"
                android:scaleX="1.05"
                android:scaleY="1.05" />
        </KeyFrameSet>
    </Transition>

    <!-- Start state -->
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.72">

            <!-- ✅ Transformations moved into a <Transform> tag -->
            <Transform
                android:translationX="-600dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:alpha="0" />
        </Constraint>
    </ConstraintSet>

    <!-- End state -->
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.72">

            <!-- ✅ Transformations moved into a <Transform> tag -->
            <Transform
                android:translationX="0dp"
                android:scaleX="1"
                android:scaleY="1"
                android:alpha="1" />
        </Constraint>
    </ConstraintSet>

</MotionScene>
