<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:duration="2000"
        app:motionInterpolator="easeInOut" />

    <!-- ðŸŽ¬ Start State -->
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/tvTitle">
            <Transform android:translationY="200dp" android:alpha="0" />
        </Constraint>
        <Constraint android:id="@id/tvSubtitle">
            <Transform android:translationY="300dp" android:alpha="0" />
        </Constraint>
        <Constraint android:id="@id/getstart">
            <Transform android:translationY="400dp" android:alpha="0" />
        </Constraint>
    </ConstraintSet>

    <!-- ðŸŽ‰ End State -->
    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/tvTitle">
            <Transform android:translationY="0dp" android:alpha="1" />
        </Constraint>
        <Constraint android:id="@id/tvSubtitle">
            <Transform android:translationY="0dp" android:alpha="1" />
        </Constraint>
        <Constraint android:id="@id/getstart">
            <Transform android:translationY="0dp" android:alpha="1" />
        </Constraint>
    </ConstraintSet>

</MotionScene>
